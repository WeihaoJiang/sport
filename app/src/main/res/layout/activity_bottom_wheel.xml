<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="false"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff" >

        <TextView
            android:id="@+id/tv_job_intension_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dip"
            android:text="关闭"
            android:textColor="@color/green"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_job_intension_display_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="预览"
            android:textColor="#777573"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_job_intension_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dip"
            android:text="确定"
            android:textColor="@color/green"
            android:textSize="16sp" />
    </RelativeLayout>
    <!-- 预览 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" >

        <com.example.jiangweihao.sport.coding.testwheelview.WheelView
            android:id="@+id/wv_job_intension_jobtypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </com.example.jiangweihao.sport.coding.testwheelview.WheelView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
    </LinearLayout>
</LinearLayout>