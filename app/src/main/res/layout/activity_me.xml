<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ebc990"
    android:paddingBottom="40dp"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">



        <LinearLayout
            android:id="@+id/ll_my_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_my_login_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录账号"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_my_login_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录体验更多功能"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_my_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/me_icon_login"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"/>

        </LinearLayout>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cardview_padding"
            android:layout_marginRight="@dimen/cardview_padding"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_12">

                <RelativeLayout
                    android:id="@+id/rl_my_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        style="@style/normalBlackText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="我的预定" />

                    <ImageView
                        style="@style/rightArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <include layout="@layout/layout_line" />

                <RelativeLayout
                    android:id="@+id/rl_my_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        style="@style/normalBlackText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/me_about_us" />

                    <ImageView
                        style="@style/rightArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <include layout="@layout/layout_line" />


                <RelativeLayout
                    android:id="@+id/rl_my_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"

                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        style="@style/normalBlackText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/me_setting" />

                    <ImageView
                        style="@style/rightArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>


</ScrollView>