<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_dbac62">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPaddingLeft="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="开始找场"
                    android:textColor="@color/color_333"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <com.example.jiangweihao.sport.coding.view.LinearLayoutItemView
                android:id="@+id/ll_appraise_truck_type_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentHintText="请选择场地位置"
                app:leftIcon="@drawable/icon_find_gps"
                app:leftText="场地位置"
                app:rightIcon="@drawable/car_filter_more_enter_icon" />

            <View
                android:id="@+id/view_line"
                style="@style/line_normal"
                android:layout_marginTop="@dimen/dp_20" />


            <com.example.jiangweihao.sport.coding.view.LinearLayoutItemView
                android:id="@+id/ll_first_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentHintText="请选择预约时间"
                app:leftIcon="@drawable/icon_find_time"
                app:leftText="预约时间"
                android:visibility="gone"
                app:rightIcon="@drawable/car_filter_more_enter_icon" />

            <View
                style="@style/line_normal"
                android:layout_marginTop="@dimen/dp_20" />

            <com.example.jiangweihao.sport.coding.view.LinearLayoutItemView
                android:id="@+id/ll_appraise_brand_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentHintText="请选择类型"
                app:leftIcon="@drawable/icon_find_size"
                app:leftText="场地类型"
                app:rightIcon="@drawable/car_filter_more_enter_icon" />

            <View
                style="@style/line_normal"
                android:layout_marginTop="@dimen/dp_20" />


            <!--<com.example.jiangweihao.sport.coding.view.LinearLayoutItemView-->
                <!--android:id="@+id/ll_mileage"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:contentHintText="请点击输入场馆名称"-->
                <!--app:isShowBottomLine="false"-->
                <!--app:leftIcon="@drawable/icon_find_name"-->
                <!--app:leftText="场馆名称"-->
                <!--app:rightIcon="@drawable/car_filter_more_enter_icon" />-->

            <!--<View-->
                <!--style="@style/line_normal"-->
                <!--android:layout_marginTop="@dimen/dp_20" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/ll_edit"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_nane"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="请输入场馆名称"

                    />

                <Button
                    android:id="@+id/btn_sure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="确定" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_appraise_buy_car"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:background="@drawable/bg_apprise_right_green"
                    android:gravity="center_horizontal"
                    android:paddingTop="30dp"
                    android:text="@string/buy_appraise"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/car_apprise_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_home_reset_select"
                    android:gravity="center_horizontal"
                    android:paddingTop="30dp"
                    android:text="@string/apprise_reset_select_b"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
